doctype html
html(lang = "en")
    head
        meta(charset = "UTF-8")
        meta(name = "viewport" content = "width=device-width, initial-scale=1.0")
        meta(http-equiv = "X-UA-Compatible" content = "ie=edge")
        link(rel = "stylesheet" href = "../stylesheets/groups.css")
        title CRUD
    body
        div(class = "update-title")
            h1 CRUD
        div(class = "update-group")
            h2(class = "update-group-title") update
            each user in users
                div(class = "update-group-div")
                    p
                        label name: 
                        label= user.name
                    p
                        label password: 
                        label= user.password
                    p
                        label email: 
                        label= user.email
                    a(href = "update/edit/"+user.id)
                        button(type = "button" class = "update-group-update") update user
            div(class = "update-group-button")
                a(href = "/")
                    button(type = "button" class = "update-group-return") return index