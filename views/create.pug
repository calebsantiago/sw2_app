doctype html
html(lang = "en")
    head
        meta(charset = "UTF-8")
        meta(name = "viewport" content = "width=device-width, initial-scale=1.0")
        meta(http-equiv = "X-UA-Compatible" content = "ie=edge")
        link(rel = "stylesheet" type = "text/css" href = "stylesheets/forms.css")
        script(type = "text/javascript" src = "https://maps.googleapis.com/maps/api/js?key=AIzaSyCSRS9SAWe9v2szpbAYACT9F8c1hJThJ7c&sensor=false")
        script(type = "text/javascript" src = "http://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js")
        script(type = "text/javascript" src = "javascripts/locationMap.js")
        script(type = "text/javascript" src = "javascripts/validate.js")
        script(type = "text/javascript" src = "javascripts/hide.js")
        title CONTACTA
    body
        div(class = "create-title")
            h1 CONTACTA
        div(class = "create-form")
            form(action = "create" method = "post" onsubmit = "return validate()")
                h2(class = "create-form-title") sign up
                div(class = "create-form-div")
                    input(type = "text" id = "username" name = "username" placeholder = "username" class = "create-form-input" required)
                    input(type = "password" id = "password" name = "password" placeholder = "password" class = "create-form-input" required)
                    input(type = "url" id = "image" name = "image" placeholder = "image link" class = "create-form-input")
                    input(type = "radio" id = "account" name = "account" value = "client" onclick = "return hide()" class = "create-form-input" checked)
                    | client
                    input(type = "radio" id = "account" name = "account" value = "provider" onclick = "return hide()" class = "create-form-input" required)
                    | provider
                    input(type = "text" id = "firstname" name = "firstname" placeholder = "firstname" class = "create-form-input" required)
                    input(type = "text" id = "lastname" name = "lastname" placeholder = "lastname" class = "create-form-input" required)
                    input(type = "radio" id = "gender" name = "gender" value = "male" class = "create-form-input" checked)
                    | male
                    input(type = "radio" id = "gender" name = "gender" value = "female" class = "create-form-input" required)
                    | female
                    input(type = "number" id = "idcard" name = "idcard" placeholder = "idcard" class = "create-form-input" style="display:none;" required disabled)
                    input(type = "date" id = "birthdate" name = "birthdate" class = "create-form-input" required)
                    input(type = "tel" id = "phonenumber" name = "phonenumber" placeholder = "phonenumber" class = "create-form-input" required)
                    input(type = "email" id = "email" name = "email" placeholder = "email" class = "create-form-input" required)
                    div(id = "map" class = "create-form-map")
                    input(type = "text" id = "address" name = "address" placeholder = "address" class = "create-form-input" readonly)
                    input(type = "text" id = "latitude" name = "latitude" placeholder = "latitude" class = "create-form-input" readonly)
                    input(type = "text" id = "longitude" name = "longitude" placeholder = "longitude" class = "create-form-input" readonly)
                    input(type = "url" id = "video" name = "video" placeholder = "video link" class = "create-form-input" style="display:none;" required disabled)
                    textarea(id = "description" name = "description" placeholder = "description" class = "create-form-input" style="display:none;" required disabled)
                    input(type = "url" id = "certificate" name = "certificate" placeholder = "certificate link" class = "create-form-input" style="display:none;" disabled)
                    input(type = "text" id = "service" name = "service" placeholder = "service" class = "create-form-input" style="display:none;" required disabled)
                    input(type = "submit" value = "create user" class = "create-form-submit")
            div(class = "create-form-button")
                a(href = "/")
                    button(type = "button" class = "create-form-return") return index