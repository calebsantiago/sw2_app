doctype html
html(lang = "en")
    head
        meta(charset = "UTF-8")
        meta(name = "viewport" content = "width=device-width, initial-scale=1.0")
        meta(http-equiv = "X-UA-Compatible" content = "ie=edge")
        link(rel = "stylesheet" type = "text/css" href = "stylesheets/forms.css")
        script(type = "text/javascript" src = "javascripts/validate.js")
        title CONTACTA
    body
        div(class = "create-title")
            h1 CONTACTA
        div(class = "create-form")
            form(action = "create" method = "post" onsubmit = "return validate()")
                h2(class = "create-form-title") create
                div(class = "create-form-div")
                    input(type = "text" id = "username" name = "username" placeholder = "username" class = "create-form-input" required)
                    input(type = "password" id = "password" name = "password" placeholder = "password" class = "create-form-input" required)
                    input(type = "radio" id = "account" name = "account" value = "client" class = "create-form-input" required)
                    | client
                    input(type = "radio" id = "account" name = "account" value = "provider" class = "create-form-input" required)
                    | provider
                    input(type = "text" id = "name" name = "name" placeholder = "name" class = "create-form-input" required)
                    input(type = "text" id = "lastname" name = "lastname" placeholder = "lastname" class = "create-form-input" required)
                    input(type = "radio" id = "gender" name = "gender" value = "male" class = "create-form-input" required)
                    | male
                    input(type = "radio" id = "gender" name = "gender" value = "female" class = "create-form-input" required)
                    | female
                    input(type = "date" id = "birthdate" name = "birthdate" pattern = "[0-9]{4}-[0-9]{2}-[0-9]{2}" class = "create-form-input" required)
                    input(type = "tel" id = "phonenumber" name = "phonenumber" placeholder = "phonenumber" pattern = "[0-9]{9}" class = "create-form-input" required)
                    input(type = "email" id = "email" name = "email" placeholder = "email" class = "create-form-input" required)
                    input(type = "text" id = "address" name = "address" placeholder = "address" class = "create-form-input" required)
                    input(type = "text" id = "latitude" name = "latitude" placeholder = "latitude" class = "create-form-input" required)
                    input(type = "text" id = "longitude" name = "longitude" placeholder = "longitude" class = "create-form-input" required)
                    input(type = "submit" value = "create user" class = "create-form-submit")
            div(class = "create-form-button")
                a(href = "/")
                    button(type = "button" class = "create-form-return") return index