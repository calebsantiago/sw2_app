extends layout
block content
    head
        include head
        script(type = 'text/javascript' src = '/javascripts/roadMap.js')
        script(type = 'text/javascript') setCoords(#{provider.coordinate.latitude}, #{provider.coordinate.longitude}, #{client.coordinate.latitude}, #{client.coordinate.longitude})
    body(style = 'padding-top: 50px;')
        header
            div(class = 'navbar navbar-expand-lg fixed-top navbar-dark bg-primary')
                div(class = 'container')
                    a(href = '/main' class = 'navbar-brand') Contacta
                    button(type = 'button' class = 'navbar-toggler' data-toggle = 'collapse' data-target = '#navbarResponsive' aria-controls = 'navbarResponsive' aria-expanded = 'false' aria-label = 'Toggle navigation')
                        span(class = 'navbar-toggler-icon')
                    div(id = 'navbarResponsive' class = 'navbar-collapse collapse')
                        ul(class = 'navbar-nav')
                            li(class = 'nav-item')
                                a(class = 'nav-link' href = '/checkquotations') cotizaciones
                            li(class = 'nav-item')
                                a(class = 'nav-link' href = '/checkhistory') historial
                            li(class = 'nav-item')
                                a(class = 'nav-link' href = '/updateaccount') editar perfil
                            li(class = 'nav-item')
                                a(class = 'nav-link' href = '/deleteaccount') eliminar cuenta
                            li(class = 'nav-item')
                                a(class = 'nav-link' href = '/logout') cerrar sesión
        div(class = 'container')
            div(class = 'bs-docs-section')
                div(class = 'row jumbotron')
                    div(class = 'col-lg-12')
                        h1(class = 'display-5 text-center') #{quotation.service}
                        p(class = 'lead text-center') 
                            strong Cliente: 
                            span #{client.name.firstname} #{client.name.lastname}
                        p(class = 'lead text-center') 
                            strong Teléfono: 
                            span #{client.phonenumber}
                        div(class = 'form-inline justify-content-center')
                            div(id = 'map' style = 'height: 500px; width: 903px;')
                            div(id = 'right-panel' class = 'p-2 bg-white')
        script(type = 'text/javascript' src='https://maps.googleapis.com/maps/api/js?key=AIzaSyCSRS9SAWe9v2szpbAYACT9F8c1hJThJ7c&callback=roadMap' async defer)
