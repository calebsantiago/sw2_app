extends layout
block content
    head
        include head
        script(type = 'text/javascript' src = '/javascripts/validate.js')
    body(style = 'padding-top: 50px;')
        header
            div(class = 'navbar navbar-expand-lg fixed-top navbar-dark bg-primary')
                div(class = 'container')
                    a(href = '/main' class = 'navbar-brand') Contacta
                    button(type = 'button' class = 'navbar-toggler' data-toggle = 'collapse' data-target = '#navbarResponsive' aria-controls = 'navbarResponsive' aria-expanded = 'false' aria-label = 'Toggle navigation')
                        span(class = 'navbar-toggler-icon')
                    div(id = 'navbarResponsive' class='collapse navbar-collapse')
                        ul(class = 'navbar-nav')
                            li(class = 'nav-item')
                                a(class = 'nav-link' href = '/checkquotations') cotizaciones
                            li(class = 'nav-item')
                                a(class = 'nav-link' href = '/checkhistory') historial
                            li(class = 'nav-item')
                                a(class = 'nav-link' href = '/updateaccount') editar perfil
                            li(class = 'nav-item')
                                a(class = 'nav-link' href = '/deleteaccount') eliminar cuenta
                            li(class = 'nav-item')
                                a(class = 'nav-link' href = '' data-toggle = "modal" data-target = "#ayuda") ayuda
                            li(class = 'nav-item')
                                a(class = 'nav-link' href = '/logout') cerrar sesión
        div(class = "modal fade" id = "ayuda" tabindex = "-1" role = "dialog" aria-labelledby = "exampleModalLongTitle" aria-hidden = "true")
            div(class = "modal-dialog" role = "document")
                div(class = "modal-content")
                    div(class = "modal-header")
                        h5(class = "modal-title" id = "exampleModalLongTitle") Ayuda
                        button(type = "button" class = "close" data-dismiss = "modal" aria-label = "Close")
                            span(aria-hidden = "true") &times;
                    div(class = "modal-body")
                        span Aquí va la ayuda.
                    div(class = "modal-footer")
                        button(type = "button" class = "btn btn-primary" data-dismiss = "modal") cerrar
        div(class = 'container')
            div(class = 'bs-docs-section')
                div(class = 'row align-items-center h-100')
                    div(class = 'col-xs-12 col-sm-10 col-lg-7 mx-auto')
                        div(id = 'container' class = 'jumbotron')
                            form(id = 'form' action = quotation._id+'?_method=put' method= 'post' onsubmit = 'return validateQuoteService()')
                                fieldset
                                    h1(class = 'display-5 text-center') #{quotation.service}
                                    div(class = 'row')
                                        div(class = 'col-lg-6')
                                            p(class = 'lead')
                                                strong Fecha: 
                                                span #{quotation.date}
                                            p(class = 'lead')
                                                strong Descripción: 
                                                span #{quotation.description}
                                            div(class = 'form-group')
                                                input(type = 'number' id = 'cost' name = 'cost' placeholder = 'costo' class = 'form-control' autofocus required)
                                        div(class = 'col-lg-6')
                                            if quotation.image != ''
                                                img(src = quotation.image class = 'img-fluid rounded mx-auto d-block' alt = 'imagen')
                                            else
                                                img(src = 'https://i.ya-webdesign.com/images/image-icon-png-5.png' class = 'img-fluid rounded mx-auto d-block' alt = 'imagen')
                                    div(class = 'form-group mt-3')
                                        input(type = 'submit' value = 'cotizar servicio' class = 'btn btn-primary btn-lg btn-block')