extends layout
block content
    head
        include head
        script(type = 'text/javascript' src = '/javascripts/validate.js')
    body(style = 'height: 100%;')
        div(class = 'container h-100')
            div(class = 'row align-items-center h-100')
                div(class = 'col-xs-12 col-sm-10 col-lg-7 mx-auto')
                    div(id = 'container' class = 'jumbotron')
                        div(class = 'page-header')
                            h1(class = 'display-5 text-center') Contacta
                            h1(class = 'display-5 text-left') ¡Bienvenido!
                        include messages
                        form(id = 'form' action = 'login' method = 'post' onsubmit = 'return validateLogIn()')
                            fieldset
                                div(class = 'form-group')
                                    input(type = 'text' id = 'email' name = 'email' placeholder = 'correo electrónico o número de teléfono' value = email class = 'form-control' autofocus required) 
                                div(class = 'form-group')
                                    input(type = 'password' id = 'password' name = 'password' placeholder = 'contraseña' value = password class = 'form-control' required)
                                button(type = 'submit' class='btn btn-primary btn-lg btn-block') iniciar sesión
                                p ¿No tienes cuenta? 
                                    a(href = '/signup') Crear cuenta