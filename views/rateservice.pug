extends layout
block content
    head
        include head
        link(rel='stylesheet' type='text/css' href='/stylesheets/rating.css')
        link(rel='stylesheet' type='text/css' href='https://fonts.googleapis.com/css?family=Lobster')
        link(rel='stylesheet' type='text/css' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
        script(type = 'text/javascript' src = '/javascripts/validate.js')
    body(style = 'padding-top: 50px;')
        header
            div(class = 'navbar navbar-expand-lg fixed-top navbar-dark bg-primary')
                div(class = 'container')
                    a(href = '/main' class = 'navbar-brand') Contacta
                    button(type = 'button' class = 'navbar-toggler' data-toggle = 'collapse' data-target = '#navbarResponsive' aria-controls = 'navbarResponsive' aria-expanded = 'false' aria-label = 'Toggle navigation')
                        span(class = 'navbar-toggler-icon')
                    div(id = 'navbarResponsive' class = 'navbar-collapse collapse')
                        ul(class = 'navbar-nav')
                            li(class = 'nav-item')
                                a(class = 'nav-link' href = '/searchservice') buscar servicio
                            li(class = 'nav-item')
                                a(class = 'nav-link' href = '/checkquotations') cotizaciones
                            li(class = 'nav-item')
                                a(class = 'nav-link' href = '/checkhistory') historial
                            li(class = 'nav-item')
                                a(class = 'nav-link' href = '/updateaccount') editar perfil
                            li(class = 'nav-item')
                                a(class = 'nav-link' href = '/deleteaccount') eliminar cuenta
                            li(class = 'nav-item')
                                a(class = 'nav-link' href = '' data-toggle = "modal" data-target = "#ayuda") ayuda
                            li(class = 'nav-item')
                                a(class = 'nav-link' href = '/logout') cerrar sesión
        div(class = "modal fade" id = "ayuda" tabindex = "-1" role = "dialog" aria-labelledby = "exampleModalLongTitle" aria-hidden = "true")
            div(class = "modal-dialog" role = "document")
                div(class = "modal-content")
                    div(class = "modal-header")
                        h5(class = "modal-title" id = "exampleModalLongTitle") Ayuda
                        button(type = "button" class = "close" data-dismiss = "modal" aria-label = "Close")
                            span(aria-hidden = "true") &times;
                    div(class = "modal-body")
                        span Aquí va la ayuda.
                    div(class = "modal-footer")
                        button(type = "button" class = "btn btn-primary" data-dismiss = "modal") cerrar
        div(class = 'container')
            div(class = 'bs-docs-section')
                div(class = 'row align-items-center h-100')
                    div(class = 'col-xs-12 col-sm-10 col-lg-7 mx-auto')
                        div(id = 'container' class = 'jumbotron')
                            form(id = 'form' action = quotation.id+'?_method=put' method = 'post' onsubmit = 'return validateRateService()')
                                fieldset
                                    h1(class = 'display-5 text-center') #{quotation.service}
                                    p(class = 'lead text-center') #{user.name.firstname} #{user.name.lastname}
                                    p(class = 'lead text-center') #{user.description}
                                    div(class = 'pt-3 pb-4')
                                        div(class = 'rating')
                                            input(id = 'star1' type = 'radio' name = 'rate' value = '5' class = 'form-control')
                                            label(for = 'star1')
                                            input(id = 'star2' type = 'radio' name = 'rate' value = '4' class = 'form-control')
                                            label(for = 'star2')
                                            input(id = 'star3' type = 'radio' name='rate' value = '3' class = 'form-control')
                                            label(for = 'star3')
                                            input(id = 'star4' type = 'radio' name = 'rate' value = '2' class = 'form-control')
                                            label(for = 'star4')
                                            input(id = 'star5' type = 'radio' name = 'rate' value = '1' class = 'form-control')
                                            label(for = 'star5')
                                    div(class = 'form-group')
                                        textarea(id = 'comment' name = 'comment' placeholder = 'comentario' class = 'form-control' required)
                                    input(type = 'submit' value = 'calificar servicio' class = 'btn btn-primary btn-lg btn-block')