doctype html
html(lang = "en")
    head
        meta(charset = "UTF-8")
        meta(name = "viewport" content = "width=device-width, initial-scale=1.0")
        meta(http-equiv = "X-UA-Compatible" content = "ie=edge")
        link(rel = "stylesheet" type = "text/css" href = "stylesheets/forms.css")
        link(rel = "stylesheet" type = "text/css" href = "https://bootswatch.com/4/cosmo/bootstrap.min.css")
        script(type = "text/javascript" src = "javascripts/searchMap.js")
        script(type = "text/javascript") setCoords(#{user.coordinate.latitude}, #{user.coordinate.longitude})
        if providers
            each provider in providers
                script(type = "text/javascript") addProvider("#{provider._id}", "#{provider.name.firstname}", "#{provider.name.lastname}", "#{provider.service.title}", "#{provider.description}", #{provider.coordinate.latitude}, #{provider.coordinate.longitude})
        script(type = "text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCSRS9SAWe9v2szpbAYACT9F8c1hJThJ7c&callback=searchMap" async defer)
        script(type = "text/javascript" src = "https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js")
        script(type = "text/javascript" src = "javascripts/show.js")
        script(type = "text/javascript" src = "javascripts/optionSelect.js")
        script(type = "text/javascript" src = "https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity = "sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin = "anonymous")
        title CONTACTA
    body
        div(class = "jumbotron text-center")
            h1 Contacta
            h2 El servicio que quieras, cuando quieras.
        if errors
            each error in errors
                div(class = "alert alert-danger alert-dismissible fade show" role = "alert") #{error.text}
                    button(type = "button" class = "close" data-dismiss = "alert" aria-label = "Close")
                        span(aria-hidden = "true") &times;
        if error_message
            div(class = "alert alert-danger alert-dismissible fade show" role = "alert") #{error_message}
                button(type = "button" class = "close" data-dismiss = "alert" aria-label = "Close")
                    span(aria-hidden = "true") &times;
        if success_message
            div(class = "alert alert-success alert-dismissible fade show" role = "alert") #{success_message}
                button(type = "button" class = "close" data-dismiss = "alert" aria-label = "Close")
                    span(aria-hidden = "true") &times;
        form(action = "searchservice" method = "post" class = "jumbotron text-center")
            h6(align = "middle") Busca tu servicio:
            select(id = "service" name = "service" class = "my-2" autofocus required)
                option(value = "" select hidden) servicio
                option(id = "gasfitería" name = "gasfitería" value = "gasfitería") gasfitería
                option(id = "guardería" name = "guardería" value = "guardería") guardería
                option(id = "movilidad" name = "movilidad" value = "movilidad") movilidad
                option(id = "panadería" name = "panadería" value = "panadería") panadería
            div
            input(type = "submit" value = "buscar servicio" class = "btn btn-primary my-2 mr-sm-2" style = "margin: 5px;")
            button(type = "button" onclick = "return show()" class = "btn btn-primary my-2 mr-sm-2" style = "margin: 5px;") ubicación
            div(align = "middle")
                div(id = "map" class = "signup-form-map" style = "display:none;" disabled)
                if users    
                    table(style = "margin: 20px;text-align:center;" border = "1px solid black;")
                        tr
                            td nombre
                            td apellido
                            td servicio
                            td descripción
                            td cotizar servicio
                        each user in users
                            tr
                                td #{user.name.firstname}
                                td #{user.name.lastname}
                                td #{user.service.title}
                                td #{user.description}
                                td
                                    a(href = "searchservice/requestquotation/" + user._id)
                                        button(type = "button" class = "") cotizar
            a(href = "/main")
                button(type = "button" class = "btn btn-primary my-2 mr-sm-2" style = "margin: 5px;") volver
        script(type = "text/javascript") optionselect("#{service}")