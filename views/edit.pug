doctype html
html(lang = "en")
    head
        meta(charset = "UTF-8")
        meta(name = "viewport" content = "width=device-width, initial-scale=1.0")
        meta(http-equiv = "X-UA-Compatible" content = "ie=edge")
        link(rel = "stylesheet" type = "text/css" href = "../../stylesheets/forms.css")
        script(type = "text/javascript" src = "../../javascripts/validate.js")
        title CRUD
    body
        div(class = "update-title")
            h1 CRUD
        div(class = "update-form")
            form(action = user.id+"?_method=put" method = "post" onsubmit = "return validate()")
                h2(class = "update-form-title") update
                div(class = "update-form-div")
                    input(type = "text" id = "name" name = "name" value = user.name placeholder = "name" class = "update-form-input" required)
                    input(type = "password" id = "password" name = "password" value = user.password placeholder = "password" class = "update-form-input" required)
                    input(type = "email" id = "email" name = "email" value = user.email placeholder = "email" class = "update-form-input" required)
                    input(type = "submit" value = "update user" class = "update-form-submit")
            div(class = "update-form-button")
                a(href = "/update")
                    button(type = "button" class = "update-form-back") back