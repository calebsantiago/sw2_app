extends layout
block content
    head
        include head
        script(type = 'text/javascript' src = '/javascripts/video.js')
    body(style = 'padding-top: 50px;')
        if account == 'client'
            header   
                div(class = 'navbar navbar-expand-lg fixed-top navbar-dark bg-primary')
                    div(class = 'container')
                        a(href = '/main' class = 'navbar-brand') Contacta
                        button(type = 'button' class = 'navbar-toggler' data-toggle = 'collapse' data-target = '#navbarResponsive' aria-controls = 'navbarResponsive' aria-expanded = 'false' aria-label = 'Toggle navigation')
                            span(class = 'navbar-toggler-icon')
                        div(id = 'navbarResponsive' class = 'navbar-collapse collapse')
                            ul(class = 'navbar-nav')
                                li(class = 'nav-item')
                                    a(class = 'nav-link' href = '/searchservice') buscar servicio
                                li(class = 'nav-item')
                                    a(class = 'nav-link' href = '/checkquotations') cotizaciones
                                li(class = 'nav-item')
                                    a(class = 'nav-link' href = '/checkhistory') historial
                                li(class = 'nav-item')
                                    a(class = 'nav-link' href = '/updateaccount') editar perfil
                                li(class = 'nav-item')
                                    a(class = 'nav-link' href = '/deleteaccount') eliminar cuenta
                                li(class = 'nav-item')
                                    a(class = 'nav-link' href = '/logout') cerrar sesión
            div(class = 'container')
                div(class = 'bs-docs-section')
                    div(class = 'row jumbotron')
                        div(class = 'col-lg-6')
                            p(class = 'lead') 
                                strong Nombres: 
                                span #{user.name.firstname}
                            p(class = 'lead') 
                                strong Apellidos: 
                                span #{user.name.lastname}
                            p(class = 'lead') 
                                strong Correo electrónico: 
                                span #{user.account.email}
                            p(class = 'lead') 
                                strong Número de teléfono: 
                                span #{user.phonenumber}
                            p(class = 'lead') 
                                strong Dirección: 
                                span #{user.address}
                        div(class = 'col-lg-6')
                            if user.account.image != ''
                                img(src = user.account.image class = 'img-fluid rounded mx-auto d-block' alt = 'imagen')
                            else
                                img(src = 'https://www.jamf.com/jamf-nation/img/default-avatars/generic-user-purple.png' class = 'img-fluid rounded mx-auto d-block' alt = 'imagen')
        else
            header
                div(class = 'navbar navbar-expand-lg fixed-top navbar-dark bg-primary')
                    div(class = 'container')
                        a(href = '/main' class = 'navbar-brand') Contacta
                        button(type = 'button' class = 'navbar-toggler' data-toggle = 'collapse' data-target = '#navbarResponsive' aria-controls = 'navbarResponsive' aria-expanded = 'false' aria-label = 'Toggle navigation')
                            span(class = 'navbar-toggler-icon')
                        div(id = 'navbarResponsive' class = 'collapse navbar-collapse')
                            ul(class = 'navbar-nav')
                                li(class = 'nav-item')
                                    a(class = 'nav-link' href = '/checkquotations') cotizaciones
                                li(class = 'nav-item')
                                    a(class = 'nav-link' href = '/checkhistory') historial
                                li(class = 'nav-item')
                                    a(class = 'nav-link' href = '/updateaccount') editar perfil
                                li(class = 'nav-item')
                                    a(class = 'nav-link' href = '/deleteaccount') eliminar cuenta
                                li(class = 'nav-item')
                                    a(class = 'nav-link' href = '/logout') cerrar sesión
            div(class = 'container')
                div(class = 'bs-docs-section')
                    div(class = 'row jumbotron')
                        div(class = 'col-lg-6')
                            p(class = 'lead') 
                                strong Nombres: 
                                span #{user.name.firstname}
                            p(class = 'lead') 
                                strong Apellidos: 
                                span #{user.name.lastname}
                            p(class = 'lead') 
                                strong Correo electrónico: 
                                span #{user.account.email}
                            p(class = 'lead') 
                                strong Número de teléfono: 
                                span #{user.phonenumber}
                            p(class = 'lead') 
                                strong DNI: 
                                span #{user.idcard}
                            p(class = 'lead') 
                                strong Dirección: 
                                span #{user.address}
                        div(class = 'col-lg-6')
                            if user.account.image != ''
                                img(src = user.account.image class = 'img-fluid rounded mx-auto d-block' alt = 'imagen')
                            else
                                img(src = 'https://www.jamf.com/jamf-nation/img/default-avatars/generic-user-purple.png' class = 'img-fluid rounded mx-auto d-block' alt = 'imagen')
                    div(class = 'row jumbotron')
                        div(class = 'col-lg-12 text-center')
                            div(class = 'table-responsive')
                                table(class='table table-hover')
                                    tbody
                                        tr(class = 'table-active')
                                            th(class = 'text-center align-middle' scope = 'row') Servicios
                                                td(class = 'text-center align-middle') #{user.service.title}
                            p(class = 'lead') #{user.description}
                            if user.certificate != ''
                                p(class = 'lead')
                                    strong Certificado:
                                    img(src = user.certificate class = 'img-fluid rounded mx-auto d-block' alt = 'certificado')
                            p(class = 'lead') 
                                strong Video:
                            div(class = 'embed-responsive embed-responsive-16by9')
                                iframe(id = 'iframe' src = '' class = 'embed-responsive-item' frameborder = '0' allow = 'accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture' allowfullscreen)
            script(type = 'text/javascript') linkVideo('#{user.video}')