extends layout
block content
    head
        include head
        script(type = 'text/javascript' src = 'javascripts/hide.js')
        script(type = 'text/javascript' src = 'javascripts/selectOption.js')
        script(type = 'text/javascript' src = 'javascripts/initMap.js')
        script(type = 'text/javascript' src = '/javascripts/validate.js')
    body(style = 'padding-top: 50px;')
        header 
            div(class = 'navbar navbar-expand-lg fixed-top navbar-dark bg-primary box-shadow')
                div(class = 'container')
                    a(href = '/' class = 'navbar-brand') Contacta
                    button(type = 'button' class = 'navbar-toggler' data-toggle = 'collapse' data-target = '#navbarResponsive' aria-controls = 'navbarResponsive' aria-expanded = 'false' aria-label = 'Toggle navigation')
                        span(class = 'navbar-toggler-icon')
                    div(id = 'navbarResponsive' class = 'navbar-collapse collapse')
                        ul(class = 'navbar-nav')
                            li(class = 'nav-item')
                                a(class = 'nav-link' href = '/signup') crear cuenta
                            li(class = 'nav-item')
                                a(class = 'nav-link' href = '/login') iniciar sesión
                            li(class = 'nav-item')
                                a(class = 'nav-link' href = '' data-toggle = "modal" data-target = "#ayuda") ayuda
        div(class = "modal fade" id = "ayuda" tabindex = "-1" role = "dialog" aria-labelledby = "exampleModalLongTitle" aria-hidden = "true")
            div(class = "modal-dialog" role = "document")
                div(class = "modal-content")
                    div(class = "modal-header")
                        h5(class = "modal-title" id = "exampleModalLongTitle") Ayuda
                        button(type = "button" class = "close" data-dismiss = "modal" aria-label = "Close")
                            span(aria-hidden = "true") &times;
                    div(class = "modal-body")
                        span Aquí va la ayuda.
                    div(class = "modal-footer")
                        button(type = "button" class = "btn btn-primary" data-dismiss = "modal") cerrar
        div(class = 'container h-100')
            div(class = 'row align-items-center h-100')
                //div(class = 'col d-none')
                        div(class = 'text-right' style = 'padding-bottom: 400px')
                            img(src = 'https://www.gruponebralejo.com/wp-content/uploads/2016/06/Logo-jardineria.png' width = '50%' height = '50%')
                        div(class = 'b-5' style = 'padding-bottom: 400px')
                            img(src = 'https://png.pngtree.com/templates/md/20180619/md_5b28f32e50a62.jpg' width = '50%' height = '50%')
                        div(class = 'text-right')
                            img(src = 'https://comparadorluz.com/sites/comparadorluz.com/themes/images/Bombilla_sin_fondo.png' width = '50%' height = '50%')
                div(class = 'col-xs-12 col-sm-10 col-lg-7 mx-auto')
                    div(id = 'container' class = 'jumbotron')
                        div(class = 'page-header')
                                h1(class = 'display-5 text-center') Regístrate
                                p(class = 'display-5 text-center') Empieza a disfrutar de los mejores servicios
                        include messages
                        form(id = 'form' action = 'signup' method = 'post' onsubmit = 'return validateSignUp()')
                            fieldset
                                div(class = 'form-group')
                                    input(type = 'text' id = 'firstname' name = 'firstname' placeholder = 'nombre' value = firstname class = 'form-control' autofocus required)
                                    small(class = 'form-text text-muted') * campo obligatorio
                                div(class = 'form-group')
                                    input(type = 'text' id = 'lastname' name = 'lastname' placeholder = 'apellido' value = lastname class = 'form-control' required)
                                    small(class = 'form-text text-muted') * campo obligatorio
                                div(class = 'form-group')
                                    if gender == 'female'
                                        div(class = 'form-inline justify-content-center')
                                            div(class = 'form-check mx-auto')
                                                input(type = 'radio' id = 'gender' name = 'gender' value = 'male' class = 'form-check-input' required)
                                                label(class = 'form-check-label' for = 'gender') masculino
                                            div(class = 'form-check mx-auto')
                                                input(type = 'radio' id = 'gender' name = 'gender' value = 'female' class = 'form-check-input' checked)
                                                label(class = 'form-check-label' for = 'gender') femenino
                                        small(class = 'form-text text-muted') * campo obligatorio
                                    else
                                        div(class = 'form-inline justify-content-center')
                                            div(class = 'form-check mx-auto')
                                                input(type = 'radio' id = 'gender' name = 'gender' value = 'male' class = 'form-check-input' checked)
                                                label(class = 'form-check-label' for = 'gender') masculino
                                            div(class = 'form-check mx-auto')
                                                input(type = 'radio' id = 'gender' name = 'gender' value = 'female' class = 'form-check-input' required)
                                                label(class = 'form-check-label' for = 'gender') femenino
                                        small(class = 'form-text text-muted') * campo obligatorio
                                div(class = 'form-group')
                                    input(type = 'date' id = 'birthdate' name = 'birthdate' placeholder = 'fecha de nacimiento' value = birthdate class = 'form-control' required)
                                    small(class = 'form-text text-muted') * campo obligatorio
                                div(class = 'form-group')    
                                    if account == 'provider'
                                        input(type = 'number' id = 'idcard' name = 'idcard' placeholder = 'dni' value = idcard class = 'form-control' required)
                                        small(id = 'small_idcard' class = 'form-text text-muted') * campo obligatorio
                                    else
                                        input(type = 'number' id = 'idcard' name = 'idcard' placeholder = 'dni' value = idcard class = 'form-control' style = 'display: none;' required disabled)
                                        small(id = 'small_idcard' class = 'form-text text-muted' style = 'display: none;') * campo obligatorio
                                div(class = 'form-group')
                                    input(type = 'tel' id = 'phonenumber' name = 'phonenumber' placeholder = 'número de teléfono' value = phonenumber class = 'form-control' required)
                                    small(class = 'form-text text-muted') * campo obligatorio
                                div(class = 'form-group')
                                    input(type = 'email' id = 'email' name = 'email' placeholder = 'correo electrónico' value = email class = 'form-control' required)
                                    small(class = 'form-text text-muted') * campo obligatorio
                                div(class = 'form-group')
                                    input(type = 'password' id = 'password' name = 'password' placeholder = 'contraseña' value = password class = 'form-control' required)
                                    small(class = 'form-text text-muted') * campo obligatorio
                                div(class = 'form-group')
                                    input(type = 'password' id = 'confirm_password' name = 'confirm_password' placeholder = 'confirmar contraseña' value = confirm_password class = 'form-control' required)
                                    small(class = 'form-text text-muted') * campo obligatorio
                                div(class = 'form-group')
                                    input(type = 'url' id = 'image' name = 'image' placeholder = 'link imagen' value = image class = 'form-control')
                                div(class = 'form-group')
                                    if account == 'provider'
                                        div(class = 'form-inline justify-content-center')
                                            div(class = 'form-check mx-auto')
                                                input(type = 'radio' id = 'account' name = 'account' value = 'client' onclick = 'return hide()' class = 'form-check-input' required)
                                                label(class = 'form-check-label') cliente
                                            div(class = 'form-check mx-auto')
                                                input(type = 'radio' id = 'account' name = 'account' value = 'provider' onclick = 'return hide()' class = 'form-check-input' checked)
                                                label(class = 'form-check-label') prestador
                                        small(class = 'form-text text-muted') * campo obligatorio
                                    else
                                        div(class = 'form-inline justify-content-center') 
                                            div(class = 'form-check mx-auto')
                                                input(type = 'radio' id = 'account' name = 'account' value = 'client' onclick = 'return hide()' class = 'form-check-input' checked)
                                                label(class = 'form-check-label') cliente
                                            div(class = 'form-check mx-auto')
                                                input(type = 'radio' id = 'account' name = 'account' value = 'provider' onclick = 'return hide()' class = 'form-check-input' required)
                                                label(class = 'form-check-label') prestador
                                        small(class = 'form-text text-muted') * campo obligatorio
                                div(class = 'form-group form-inline justify-content-center')
                                    div(id = 'map' style = 'height: 350px; width: 571px;')
                                div(class = 'form-group')
                                    input(type = 'text' id = 'address' name = 'address' placeholder = 'dirección' class = 'form-control' readonly required)
                                div(class = 'form-group')
                                    input(type = 'text' id = 'latitude' name = 'latitude' placeholder = 'latitud' class = 'form-control' readonly required)
                                div(class = 'form-group')
                                    input(type = 'text' id = 'longitude' name = 'longitude' placeholder = 'longitud' class = 'form-control' readonly required)
                                div(class = 'form-group')
                                    if account == 'provider'
                                        input(type = 'url' id = 'video' name = 'video' placeholder = 'link video' value = video class = 'form-control' required)
                                        small(id = 'small_video' class = 'form-text text-muted') * campo obligatorio
                                    else
                                        input(type = 'url' id = 'video' name = 'video' placeholder = 'link video' value = video class = 'form-control' style = 'display: none;' required disabled)
                                        small(id = 'small_video' class = 'form-text text-muted' style = 'display: none;') * campo obligatorio
                                div(class = 'form-group')
                                    if account == 'provider'
                                        textarea(id = 'description' name = 'description' placeholder = 'descripción' class = 'form-control' required) #{description}
                                        small(id = 'small_description' class = 'form-text text-muted') * campo obligatorio
                                    else
                                        textarea(id = 'description' name = 'description' placeholder = 'descripción' class = 'form-control' style = 'display: none;' required disabled) #{description}
                                        small(id = 'small_description' class = 'form-text text-muted' style = 'display: none;') * campo obligatorio
                                div(class = 'form-group')
                                    if account == 'provider'
                                        input(type = 'url' id = 'certificate' name = 'certificate' placeholder = 'link certificado' value = certificate class = 'form-control')
                                    else
                                        input(type = 'url' id = 'certificate' name = 'certificate' placeholder = 'link certificado' value = certificate class = 'form-control' style = 'display: none;' disabled)
                                div(class = 'form-group')
                                    if account == 'provider'
                                        select(id = 'service' name = 'service' class = 'form-control' required)
                                            option(value = '' select hidden) servicio
                                            option(id = 'gasfitería' name = 'gasfitería' value = 'gasfitería') gasfitería
                                            option(id = 'guardería' name = 'guardería' value = 'guardería') guardería
                                            option(id = 'movilidad' name = 'movilidad' value = 'movilidad') movilidad
                                            option(id = 'panadería' name = 'panadería' value = 'panadería') panadería
                                        small(id = 'small_service' class = 'form-text text-muted') * campo obligatorio
                                    else
                                        select(id = 'service' name = 'service' class = 'form-control' style = 'display: none;' required disabled)
                                            option(value = '' select hidden) servicio
                                            option(id = 'gasfitería' name = 'gasfitería' value = 'gasfitería') gasfitería
                                            option(id = 'guardería' name = 'guardería' value = 'guardería') guardería
                                            option(id = 'movilidad' name = 'movilidad' value = 'movilidad') movilidad
                                            option(id = 'panadería' name = 'panadería' value = 'panadería') panadería
                                        small(id = 'small_service' class = 'form-text text-muted' style = 'display: none;') * campo obligatorio
                                button(type = 'submit' class = 'btn btn-primary btn-lg btn-block') crear cuenta
                //div(class = 'col d-none')
                    div(class = 'text-left' style = 'padding-bottom: 400px')
                        img(src = 'https://st4.depositphotos.com/1019239/25179/v/450/depositphotos_251790418-stock-illustration-repairs-icon-hand-wrench-concept.jpg' width = '50%' height = '50%')
                    div(class = 'text-right' style = 'padding-bottom: 400px')
                        img(src = 'https://st2.depositphotos.com/4197925/11806/v/950/depositphotos_118064842-stock-illustration-vector-logo-water-gas-engineering.jpg' width = '50%' height = '50%')
                    div(class = 'text-left')
                        img(src = 'https://www.cerrajeriavega.com/wp-content/uploads/2017/10/servicios-de-cerrajeria-las-24-horas.png' width = '60%' height = '60%')
        script(type = 'text/javascript') selectOption('#{service}')
        script(type = 'text/javascript' src = 'https://maps.googleapis.com/maps/api/js?key=AIzaSyCSRS9SAWe9v2szpbAYACT9F8c1hJThJ7c&callback=initMap' async defer)                         