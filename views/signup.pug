doctype html
html(lang = "en")
    head
        meta(charset = "UTF-8")
        meta(name = "viewport" content = "width=device-width, initial-scale=1.0")
        meta(http-equiv = "X-UA-Compatible" content = "ie=edge")
        link(rel = "stylesheet" type = "text/css" href = "stylesheets/forms.css")
        link(rel = "stylesheet" type = "text/css" href = "https://bootswatch.com/4/cosmo/bootstrap.min.css")
        script(type = "text/javascript" src = "javascripts/initMap.js")
        script(type = "text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCSRS9SAWe9v2szpbAYACT9F8c1hJThJ7c&callback=initMap" async defer)
        script(type = "text/javascript" src = "https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js")
        script(type = "text/javascript" src = "javascripts/hide.js")
        script(type = "text/javascript" src = "javascripts/selectOption.js")
        script(type = "text/javascript" src = "https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity = "sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin = "anonymous")
        title CONTACTA
    body
        div(class = "jumbotron text-center")
                    h1.display-3 Regístrate
                    p Empieza a disfrutar de los mejores servicios
        if errors
            each error in errors
                div(class = "alert alert-danger alert-dismissible fade show" role = "alert") #{error.text}
                    button(type = "button" class = "close" data-dismiss = "alert" aria-label = "Close")
                        span(aria-hidden = "true") &times;
        if error_message
            div(class = "alert alert-danger alert-dismissible fade show" role = "alert") #{error_message}
                button(type = "button" class = "close" data-dismiss = "alert" aria-label = "Close")
                    span(aria-hidden = "true") &times;
        if success_message
            div(class = "alert alert-success alert-dismissible fade show" role = "alert") #{success_message}
                button(type = "button" class = "close" data-dismiss = "alert" aria-label = "Close")
                    span(aria-hidden = "true") &times;
        div.container
            .row
                .col
                    .text-right(style='padding-bottom: 400px')
                        img(src='https://www.gruponebralejo.com/wp-content/uploads/2016/06/Logo-jardineria.png' width='50%' height='50%')
                    .b-5(style='padding-bottom: 400px')
                        img(src='https://png.pngtree.com/templates/md/20180619/md_5b28f32e50a62.jpg' width='50%' height='50%')
                    .text-right
                        img(src='https://comparadorluz.com/sites/comparadorluz.com/themes/images/Bombilla_sin_fondo.png' width='50%' height='50%')
                .col
                    form
                    div
                    div(class = "signup-form")
                        form(action = "signup" method = "post")
                            h2.jumbotron.text-center Crear cuenta
                            div(class = "signup-form-div")
                                input(type = "text" id = "firstname" name = "firstname" placeholder = "nombre" value = firstname class = "signup-form-input" autofocus required)
                                input(type = "text" id = "lastname" name = "lastname" placeholder = "apellido" value = lastname class = "signup-form-input" required)
                                if gender == "female"
                                    input(type = "radio" id = "gender" name = "gender" value = "male" class = "signup-form-input" required)
                                    | masculino
                                    input(type = "radio" id = "gender" name = "gender" value = "female" class = "signup-form-input" checked)
                                    | femenino
                                else
                                    input(type = "radio" id = "gender" name = "gender" value = "male" class = "signup-form-input" checked)
                                    | masculino
                                    input(type = "radio" id = "gender" name = "gender" value = "female" class = "signup-form-input" required)
                                    | femenino

                                input(type = "date" id = "birthdate" name = "birthdate" placeholder = "fecha de nacimiento" value = birthdate class = "signup-form-input" required)
                                if account == "provider"
                                    input(type = "number" id = "idcard" name = "idcard" placeholder = "dni" value = idcard class = "signup-form-input" required)
                                else
                                    input(type = "number" id = "idcard" name = "idcard" placeholder = "dni" value = idcard class = "signup-form-input" style = "display:none;" required disabled)
                                input(type = "tel" id = "phonenumber" name = "phonenumber" placeholder = "número de teléfono" value = phonenumber class = "signup-form-input" required)
                                input(type = "email" id = "email" name = "email" placeholder = "correo electrónico" value = email class = "signup-form-input" required)
                                input(type = "password" id = "password" name = "password" placeholder = "contraseña" value = password class = "signup-form-input" required)
                                input(type = "password" id = "confirm_password" name = "confirm_password" placeholder = "confirmar contraseña" value = confirm_password class = "signup-form-input" required)
                                input(type = "url" id = "image" name = "image" placeholder = "link imagen" value = image class = "signup-form-input")
                                if account == "provider"
                                    input(type = "radio" id = "account" name = "account" value = "client" onclick = "return hide()" class = "signup-form-input" required)
                                    | cliente
                                    input(type = "radio" id = "account" name = "account" value = "provider" onclick = "return hide()" class = "signup-form-input" checked)
                                    | prestador
                                else 
                                    input(type = "radio" id = "account" name = "account" value = "client" onclick = "return hide()" class = "signup-form-input" checked)
                                    | cliente
                                    input(type = "radio" id = "account" name = "account" value = "provider" onclick = "return hide()" class = "signup-form-input" required)
                                    | prestador
                                div(id = "map" class = "signup-form-map")
                                input(type = "text" id = "address" name = "address" placeholder = "dirección" class = "signup-form-input" readonly required)
                                input(type = "text" id = "latitude" name = "latitude" placeholder = "latitud" class = "signup-form-input" readonly required)
                                input(type = "text" id = "longitude" name = "longitude" placeholder = "longitud" class = "signup-form-input" readonly required)
                                if account == "provider"
                                    input(type = "url" id = "video" name = "video" placeholder = "link video" value = video class = "signup-form-input" required)
                                else
                                    input(type = "url" id = "video" name = "video" placeholder = "link video" value = video class = "signup-form-input" style = "display:none;" required disabled)
                                if account == "provider"
                                    textarea(id = "description" name = "description" placeholder = "descripción" class = "signup-form-input" required) #{description}
                                else
                                    textarea(id = "description" name = "description" placeholder = "descripción" class = "signup-form-input" style = "display:none;" required disabled) #{description}
                                if account == "provider"
                                    input(type = "url" id = "certificate" name = "certificate" placeholder = "link certificado" value = certificate class = "signup-form-input")
                                else
                                    input(type = "url" id = "certificate" name = "certificate" placeholder = "link certificado" value = certificate class = "signup-form-input" style = "display:none;" disabled)
                                if account == "provider"
                                    select(id = "service" name = "service" class = "signup-form-input" required)
                                        option(value = "" select hidden) servicio
                                        option(id = "gasfitería" name = "gasfitería" value = "gasfitería") gasfitería
                                        option(id = "guardería" name = "guardería" value = "guardería") guardería
                                        option(id = "movilidad" name = "movilidad" value = "movilidad") movilidad
                                        option(id = "panadería" name = "panadería" value = "panadería") panadería
                                else
                                    select(id = "service" name = "service" class = "signup-form-input" style = "display:none;" required disabled)
                                        option(value = "" select hidden) servicio
                                        option(id = "gasfitería" name = "gasfitería" value = "gasfitería") gasfitería
                                        option(id = "guardería" name = "guardería" value = "guardería") guardería
                                        option(id = "movilidad" name = "movilidad" value = "movilidad") movilidad
                                        option(id = "panadería" name = "panadería" value = "panadería") panadería
                                input(type = "submit" value = "crear cuenta" class = "btn btn-secondary btn-lg btn-block")
                        div(class = "signup-form-button")
                            a(href = "/")
                                button(type = "button" class = "btn btn-secondary btn-lg btn-block") volver
                .col
                    .text-left(style='padding-bottom: 400px')
                        img(src='https://st4.depositphotos.com/1019239/25179/v/450/depositphotos_251790418-stock-illustration-repairs-icon-hand-wrench-concept.jpg' width='50%' height='50%')
                    .text-right(style='padding-bottom: 400px')
                        img(src='https://st2.depositphotos.com/4197925/11806/v/950/depositphotos_118064842-stock-illustration-vector-logo-water-gas-engineering.jpg' width='50%' height='50%')
                    .text-left
                        img(src='https://www.cerrajeriavega.com/wp-content/uploads/2017/10/servicios-de-cerrajeria-las-24-horas.png' width='60%' height='60%')
        script(type = "text/javascript") selectOption("#{service}")                          